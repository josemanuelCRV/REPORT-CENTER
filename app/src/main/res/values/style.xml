    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--  Nuevo Detalle Styles -->
    <style name="AppTheme.Detail" parent="AlertDialog.AppCompat.Light">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBar.Form</item>
    </style>

    <!--  Nuevo Insert Styles -->
    <style name="AppTheme.Insert" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/Theme.AppCompat.Light.DarkActionBar</item>
    </style>



    <!-- ActionBar Detail -->
    <style name="ActionBar.Detail" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="background">@null</item>
    </style>

    <!-- ActionBar Formulario insertar -->
    <style name="ActionBar.Form" parent="AppTheme.AppBarOverlay">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="background">@null</item>
    </style>



    <!-- botones de Sign Up - Sign In -->
    <style name="Btn_Sign" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>


