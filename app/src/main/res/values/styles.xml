<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gold2_poundwater</item>
        <item name="colorPrimaryDark">@color/gold1_aoi</item>
        <item name="colorAccent">@color/gold4_giant</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="colorControlHighlight">@color/gold5_unreal</item>
        <item name="android:windowBackground">@color/background</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base" />


    <!-- OLD Base application theme. -->
