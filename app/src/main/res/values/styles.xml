    <style name="AppTheme.NoActionBar">
         <item name="windowActionBar">false</item>
         <item name="windowNoTitle">true</item>
     </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


   <!--  Nuevo Detalle Styles -->
    <style name="AppTheme.Detail" parent="AppTheme.Base">
       <item name="colorPrimaryDark">@color/accent</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBar.Detail</item>
    </style>

    <style name="ActionBar.Detail" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="colorPrimaryDark">@color/accent</item>
        <item name="background">@null</item>
    </style>


    <!-- botones de Sign Up - Sign In -->
    <style name="Btn_Sign" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/gold4_giant</item>
        <item name="colorButtonNormal">@color/gold3_beachStorm</item>
    </style>


</resources>
