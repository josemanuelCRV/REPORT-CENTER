<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:aandroid="http://schemas.android.com/tools"
    android:padding="5dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:paddingTop="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text2"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/text1"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/textInput"
        android:layout_below="@+id/text1"
        android:paddingBottom="10dp"
        android:layout_alignParentBottom="true"
        android:maxLength="55"
        android:maxLines="1"
        android:minLines="1"
        android:visibility="invisible"
        android:singleLine="true"/>

    <com.melnykov.fab.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        fab:fab_type="mini"
        android:visibility="invisible"
        fab:fab_colorNormal="@color/btn_Twitter_normal"
        fab:fab_colorPressed="@color/btn_Twitter_pressed"
        fab:fab_colorRipple="@color/ripple"/>

    <com.melnykov.fab.FloatingActionButton
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        fab:fab_type="mini"
        android:visibility="invisible"
        fab:fab_colorNormal="@color/ripple"
        fab:fab_colorPressed="@color/btn_Twitter_pressed"
        fab:fab_colorRipple="@color/btn_Twitter_normal"/>

    <ImageView
        android:id="@+id/profImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/text1"
        android:visibility="invisible"
        />

